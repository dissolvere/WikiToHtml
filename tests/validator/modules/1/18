{OPENAGHMATHJAX( type="block
")}\begin{equation}
\begin{matrix}{p_{{2}}V_{{2}}^{{\kappa }}=p_{{3}}V_{{3}}^{{\kappa
}}} \\ p_{{4}}V_{{4}}^{{\kappa }}=p_{{1}}V_{{1}}^{{\kappa
}} \end{matrix}
\end{equation}{OPENAGHMATHJAX}
